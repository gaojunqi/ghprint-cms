  <!-- 根据operatorid获取人员信息及权限 -->
  <select id="queryOperatroInfo" resultMap="ResultMap" parameterType="java.lang.String" >
    select i.localid,o.id,r.roleid,r.rolestatus
    FROM T_SYS_USER_ROLE i,T_SYS_ROLE r,T_SYS_USER o
    where  i.USERID=o.ID
    and i.ROLEID=r.ID
    and r.ROLESTATUS = 1
    and o.ID = #{id}
  </select>
